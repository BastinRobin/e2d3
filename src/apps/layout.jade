doctype html
html
  block vars
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=Edge')
    title= title
    link(rel='stylesheet', href='lib/libs.css')
    link(rel='stylesheet', href='lib/main.css')
  body
    #log.log
    //- header
    header
      nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
        .container
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='index.html'): img(src='logo.png', width=32, height=20)
            p.navbar-text: small JS charts on Excel Easily
          #navbar.collapse.navbar-collapse
            ul.nav.navbar-nav
            ul.nav.navbar-nav.navbar-right
              li
                button#settings(type='button', class='btn btn-default btn-sm navbar-btn dropdown-toggle', data-toggle='dropdown')
                  i(class='fa fa-cog')
                  |  
                  span(class='caret')
                ul(class='dropdown-menu', role='menu')
                  li: a: i(class='fa fa-bar-chart')
                    |  Only chart view
                  li(class='divider', role='presentations')
                  li: a: i(class='fa fa-refresh')
                    |  Reset selected area
                button#home(type='button', class='btn btn-default btn-sm navbar-btn', onclick='location.href="index.html"')
                  i(class='fa fa-home')
    //- body
    .container
      block content
    script(src='https://www.promisejs.org/polyfills/promise-6.0.1.min.js')
    script(src='https://www.promisejs.org/polyfills/promise-done-6.0.1.min.js')
    script(src='https://appsforoffice.microsoft.com/lib/1.1/hosted/office.js')
    //- load if variable 'main' is defined
    script(src='lib/libs.js', data-main=main || false)
