doctype html
html
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=Edge')
    style.
      html, body, #e2d3-chart-area {
        width: 100%;
        height: 100%;
        margin: 0px;
        padding: 0px;
        text-align: center;
      }
      .log {
        font-family: monospace;
        font-size: 10px;
        position: absolute;
        width: 600px;
        height: 200px;
        background-color: rgba(250,250,250,0.7);
        color: #000;
        bottom: 0;
        left: 0;
        z-index: 10000;
        padding: 4px;
        border: 1px #ddd solid;
        overflow-x: hidden;
        overflow-y: scroll;
        display: none;
      }
  body
    section#e2d3-chart-area
    #log.log
    script(src='https://www.promisejs.org/polyfills/promise-6.0.1.min.js')
    script(src='https://www.promisejs.org/polyfills/promise-done-6.0.1.min.js')
    script(src='https://appsforoffice.microsoft.com/lib/1.1/hosted/office.js')
    //- load if variable 'main' is defined
    script(src='lib/libs.js', data-main='frame.js')
